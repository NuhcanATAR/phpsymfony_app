<!DOCTYPE html>
<html class='dark'>
    <head>
        <meta charset="UTF-8">
        <title>Code Noah</title>
        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
        {# <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous"> #}
         <script src="https://cdn.tailwindcss.com"></script>
         <script>
            tailwind.config {
                darkMode: 'class'
            }
         </script>
    </head>
    <body class='bg-gray-100 text-gray-800 m-10 dark:bg-gray-800 dark:text-white'>
    <div class="container mx-auto px-4 md:px-8">
    <div class='bg-gray-100 text-gray-800 m-10 dark:bg-gray-800 dark:text-white'>
        <div class='text-4x1'>
            <a href="{{ path('app_micro_post') }}">Home</a>
            {% block bread %}            
            {% endblock %}
        </div>
        <div class='text-right'>
            <div class='text-sm text-gray-400 dark:text-gray-500 flex'>
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <div>
                    <a href="{{ path('app_micro_post_add') }}">Add New </a>
                </div>
                 <div class='ml-2'>
                    <a href="{{ path('app_settings_profile') }}">Profile Settings</a>
                </div>
                 <div class='ml-2'>
                    <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% else %}
                <div>
                    <a href="{{ path('app_login') }}">Login</a>
                </div>
                 <div class='ml-2'>
                    <a href="{{ path('app_register') }}">Register</a>
                </div>
            {% endif %}
            </div>
        </div>
        
        </div>
        {% for message in app.flashes('notice') %}
            <div class="flash-notice"
                {{ message }} 
            </div>
        {% endfor %}
        {% block body %}{% endblock %} 
        </div>
    </body>
</html>
